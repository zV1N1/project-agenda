<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"> </div>

    <div class="col-lg-8 my-3 text-white">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Your contacts are below</p>
    </div>

    <%- include('includes/messages') %>   
    
    <% if(contacts.length > 0) { %>
    <div class="responsive-table">
      <table class="table table-dark table-hover my-2">
        <% contacts.forEach(contact => { %>
          <tr>
            <td><%= contact.name  %></td>
            <td><%= contact.lastName  %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.email  %></td>
            <td><a class="text-decoration-none" href="/contact/index/<%= contact._id %>">Update</a></td>
            <td><a class="text-danger text-decoration-none" href="/contact/delete/<%= contact._id %>">Delete</a></td>
          </tr>
        <% }) %>
      </table>
    </div>
    <% } else { %>
      <p class="text-center lead">There are no contacts in your phonebook.</p>
    <% } %>

    <div class="col-lg-2"> </div>
  </div>
</div>
<%- include('includes/footer') %>

    
